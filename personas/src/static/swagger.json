          },
          "ftp": {
            "type": "int",
            "example": 0
          }
        }
      },
      "PerfilDeportivoCreado":{
        "type": "object",
        "properties":{
          "description": {
            "type": "string",
            "example":"Perfil Deportivo Registrado con exito"
          },
          "id":{
